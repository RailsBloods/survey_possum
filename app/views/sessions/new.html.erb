<section class = "landing-page-card card">

   <p id="notice"><%= notice %></p>
   <p id="alert"><%= alert %></p>

   <h1>Welcome to Survey Possum!</h1>
   <h2>If you already have an account you may login below, otherwise please create an account here:</h2>

   <p>Please login below.</p>

   <%= form_tag(login_path) do %>
      <p><%= label_tag :email %>
     <%= email_field_tag :email %></p>

     <p><%= label_tag :password %>
     <%= password_field_tag :password %></p>

     <%= submit_tag "Log in" %>
   <% end %>
</section>
