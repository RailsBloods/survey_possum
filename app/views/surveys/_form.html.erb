<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Survey Description (Optional)" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: session[:user_id] %><br>
  </div>

  <h3>Questions</h3>

  <%= f.fields_for :questions do |ff| %>
    <div>
      <%= ff.number_field :question_number, placeholder: "Question Number" %>
      <%= ff.select :type, ['Yes/No', 'Short Answer', 'Long Answer'] %>
      <%= ff.text_field :question_text, placeholder: "Question" %>
      <%= ff.text_area :description, placeholder: "Description (Optional)" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
