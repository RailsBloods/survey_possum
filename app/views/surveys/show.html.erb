<p id="notice"><%= notice %></p>

<p>
  <strong>Survey Title:</strong>
  <%= @survey.title %>
</p>

<p>
  <strong>Survey Description:</strong>
  <%= @survey.description %>
</p>

<%=form_for(@survey) do |f| %>

  <% @survey.yes_no_questions.each do |q| %>
      <div>
        <%= q.question %>
        <%= q.description %>
      </div>
  <% end %>

  <% @survey.short_questions.each do |q| %>
      <div>
        <%= q.question %>
        <%= q.description %>
      </div>
  <% end %>

  <% @survey.long_questions.each do |q| %>
      <div>
        <%= q.question %>
        <%= q.description %>
      </div>
  <% end %>

<% end %>

<br><br>
<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
