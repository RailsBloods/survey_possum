<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Question Number</th>
      <th>Question</th>
      <th>Question Response</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <% if answer.question.survey.id.to_i == @survey_id.to_i %>
        <tr>
          <td><%= answer.question_number %></td>
          <td><%= answer.question.question_text %></td>
          <td><%= answer.question_response %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
